# Environment Variables for BitMar Training
# Copy this file to .env and fill in your actual tokens

# HuggingFace Token (required for validation datasets)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# WandB Configuration (optional, for experiment tracking)
# Get from: https://wandb.ai/settings
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=bitmar-babylm
WANDB_ENTITY=your_username

# CUDA Settings (for GPU training)
CUDA_LAUNCH_BLOCKING=0
PYTHONUNBUFFERED=1

# Cache Directories
HF_HOME=/workspace/.cache/huggingface
TRANSFORMERS_CACHE=/workspace/.cache/transformers
